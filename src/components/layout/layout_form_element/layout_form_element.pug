doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='shortcut icon' href='images/Group.png' type='image/x-icon')
    link(rel='stylesheet')
    title TOXIN
  body
    .wrapper
        .container 
            .buttons 
                .buttons__text-field
                  .buttons__text_field_default
                    .buttons__text_field_header 
                      h3.buttons__text_field_left Text Field
                      .buttons__text_field_right Default
                    +textField('action', 'text', 'Email')
                  .buttons__text_field_hover
                    .buttons__text_field_header 
                      h3.buttons__text_field_left Text Field
                      .buttons__text_field_right Hover / Focus
                    +textField('action', 'text', 'This is pretty awesome')
                  .buttons__dropdown
                    +dropdown('action', 'text', 'Сколько гостей', 'dropdown')
                  .buttons__masked_text_field
                    +masked_text_field('masked text field')
                  +date_dropdown('date Dropdown', 'date Dropdown')
                  +filter_date_dropdown('filter date Dropdown')
                  .buttons__subscription
                    .buttons__text_field_header 
                      h3.buttons__text_field_left filter date dropdown
                    +subscription_text_field('subscription text field')
                .buttons__checkbox 
                  .buttons__checkbox_buttons 
                    +checkbox_buttons()
                  .buttons__radio_buttons 
                    .buttons__text_field_header 
                      h3.buttons__text_field_left Radio Buttons
                    +radio_buttons()
                  .buttons__toggle 
                    .buttons__text_field_header 
                      h3.buttons__text_field_left Toggle
                    .buttons__toggle_1
                      +toggle()
                    .buttons__toggle_2
                      +toggle()
                  .buttons__like_button
                    .buttons__text_field_header 
                      h3.buttons__text_field_left like button
                    .buttons__like_button_items
                      .buttons__like_button_item
                        +like_button()
                      .buttons__like_button_item
                        +like_button()
                  .buttons__rate_button
                    .buttons__text_field_header 
                      h3.buttons__text_field_left like button
                    .buttons__rate_button_items
                      .buttons__rate_button_item
                        +rate_button()
                      .buttons__rate_button_item
                        +rate_button()
                .buttons__buttons
                  .buttons__buttons_renge_slider
                    +range_slider()
                  .buttons__buttons_buttons 
                    h3 buttons
                    .buttons__buttons_item
                      .buttons__btn_1
                        +btn_additional('click me', 'btn_additional__path_off')(class="btn_additional__default")
                      .buttons__btn_2
                        +btn_additional('click me', 'btn_additional__path_off')(class="btn_additional__default")
                    .buttons__buttons_item
                      .buttons__btn_transparent_1
                        +btn_additional('click me')(class="btn_additional__transparent")
                      .buttons__btn_transparent_2
                        +btn_additional('click me')(class="btn_additional__transparent")
                    .buttons__buttons_item
                      .buttons__buttons_link_1
                        +link_main('click me')(class="link_main__default")
                      .buttons__buttons_link_2
                        +link_main('click me')(class="link_main__default")
                    .buttons__buttons_item
                      +button('перейти к оплате')(class="button__default_pathOn")
                    .buttons__buttons_item.buttons__buttons_pagination
                      h3 pagination
                      .buttons__pagination
                        +pagination('15')(class="pagination__default_pathOn")
            .dropdown 
              .dropdown__block1
                +dropdown_facilities('action', 'text', 'Сколько спален', 'dropdown', '')
                +dropdown_facilities('action', 'text', 'Сколько спален', 'dropdown', '')
              .dropdown__block2
                +dropdown('action', 'text', 'Сколько гостей', 'dropdown', '')
              .dropdown__block3
                +dropdown('action', 'text', 'Сколько гостей', 'dropdown', '')
            .checkbox 
              .checkbox__block1 
                +checkbox_list()
              .checkbox__block2 
                +rich_chkbox_btn()
              .checkbox__block3 
                +bullet_list('bullet list')
            .comments 
              .comments__block1 
                +information_block()
              .comments__block2 
                +review_form()