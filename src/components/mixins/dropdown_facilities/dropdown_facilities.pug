
mixin dropdown_facilities(action, text, Email, titleLeft)
    .dropdown_facilities__form_text_field 
        .dropdown_facilities__form_text_field_header
            .dropdown_facilities__text_field_header-left
                h3=titleLeft
        form.dropdown_facilities__form_dropdown#form_text_field(action=action)
            input.dropdown_facilities__form_input_dropdown#input_text_field(
                type=text
                placeholder=Email
            )
            button.dropdown_facilities__form_btn(
                style="backraund-image"
                type="button"
                data-toggle="dropdown"
